{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    // TypeChecking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
